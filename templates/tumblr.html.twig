{% extends 'partials/tumblr_base.html.twig' %}

{% block content %}
    {{ page.content }}
      {# note: twig cache plugin should be used in tandem with this plugin
      {% cache 'tumblr_blog_posts' 600 %}
      #}
    	{% for post in tumblr.client.getBlogPosts(page.header.tumblr.settings.page).posts %}
        <article class="tumblr_plugin {{ post.type }}">
          {% include ('partials/types/'~ post.type ~'.html.twig') %}
        </article>
        {% endfor %}
      {# note: cache disabled for demo purposes 
      {% endcache %}
      #}
{% endblock %}
